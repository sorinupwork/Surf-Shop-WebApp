<h1>New Post</h1>


<form class="" action="/posts" method="post" enctype="multipart/form-data">
  <div class="">
    <input type="text" name="post[title]"  placeholder="Title">
  </div>
  <div class="">
    <input type="text" name="post[price]"  placeholder="Price">
  </div>
  <div class="">
    <input type="file" name="images" value="" accept="images/*" multiple >
  </div>
  <div class="">
      <textarea name="post[description]" placeholder="Description"></textarea>
  </div>
  <div class="">
    <input type="text" name="post[location]"  placeholder="Location">
  </div>

  <input type="submit" value="Submit">
</form>
